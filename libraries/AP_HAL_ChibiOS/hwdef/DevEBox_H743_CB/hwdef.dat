# hw definition file for processing by chibios_hwdef.py
# for H743 bootloader

AUTOBUILD_TARGETS None

#env OPTIMIZE -O2
#env -Wno-error unused-variable

# MCU class and specific type
MCU STM32H7xx STM32H743xx

# crystal frequency
OSCILLATOR_HZ 25000000

# board ID for firmware load
APJ_BOARD_ID 1061

# the nucleo seems to have trouble with flashing the last sector?
FLASH_SIZE_KB 2048
FLASH_RESERVE_START_KB 128

# only one I2C bus
I2C_ORDER I2C1 I2C2

# order of UARTs (and USB)
SERIAL_ORDER OTG1 USART1 USART3 UART8 OTG2

# default the 2nd interface to MAVLink2
define HAL_OTG2_PROTOCOL SerialProtocol_MAVLink2

PA11 OTG_FS_DM OTG1
PA12 OTG_FS_DP OTG1

PA13 JTMS-SWDIO SWD
PA14 JTCK-SWCLK SWD

# USART1 is telemet1
PA10 USART1_RX USART1 NODMA
PA9  USART1_TX USART1 NODMA

# USART3 (MAVLink2)
PD8  USART3_TX USART3 NODMA
PD9  USART3_RX USART3 NODMA
PB14 USART3_RTS     USART3
PB13 USART3_CTS_NSS USART3
define HAL_SERIAL3_PROTOCOL SerialProtocol_MAVLink2
define HAL_SERIAL3_BAUD 230400

# UART8 is GPS1
PE0 UART8_RX UART8 NODMA
PE1 UART8_TX UART8 NODMA

# SD card
PC8  SDMMC1_D0  SDMMC1
PC9  SDMMC1_D1  SDMMC1
PC10 SDMMC1_D2  SDMMC1
PC11 SDMMC1_D3  SDMMC1
PC12 SDMMC1_CK  SDMMC1
PD2  SDMMC1_CMD SDMMC1

# QuadSPI Flash
PD11 QUADSPI_BK1_IO0 QUADSPI1
PD12 QUADSPI_BK1_IO1 QUADSPI1
PE2  QUADSPI_BK1_IO2 QUADSPI1
PD13 QUADSPI_BK1_IO3 QUADSPI1
PB6  QUADSPI_BK1_NCS QUADSPI1
PB2  QUADSPI_CLK     QUADSPI1

# I2C1 for baro
PB8 I2C1_SCL I2C1 NOLLUP
PB7 I2C1_SDA I2C1 NOLLUP
define HAL_I2C_MAX_CLOCK 400000

# I2C2 external
PB10 I2C2_SCL I2C2 NOLLUP
PB11 I2C2_SDA I2C2 NOLLUP
define HAL_I2C_MAX_CLOCK 400000


# SPI1 for IMU and compass
PB3 SPI1_SCK  SPI1
PB4 SPI1_MISO SPI1
PD7 SPI1_MOSI SPI1

# SPI4 external
#PE12 SPI4_SCK  SPI4
#PE5  SPI4_MISO SPI4
#PE6  SPI4_MOSI SPI4

# PWM
PE14 TIM1_CH4 TIM1 PWM(1)
PE13 TIM1_CH3 TIM1 PWM(2)
PE11 TIM1_CH2 TIM1 PWM(3)
PE9  TIM1_CH1 TIM1 PWM(4)
PB0  TIM3_CH3 TIM3 PWM(5)
PB1  TIM3_CH4 TIM3 PWM(6)
PA6  TIM3_CH1 TIM3 PWM(7)
PA7  TIM3_CH2 TIM3 PWM(8)
PA2  TIM2_CH3 TIM2 PWM(9)
PA3  TIM2_CH4 TIM2 PWM(10)
PA0  TIM2_CH1 TIM2 PWM(11)

define HAL_OS_FATFS_IO 1
define HAL_BOARD_LOG_DIRECTORY "/APM/LOGS"
define HAL_BOARD_TERRAIN_DIRECTORY "/APM/TERRAIN"

define HAL_USE_EMPTY_STORAGE 1
define HAL_STORAGE_SIZE 16384

define HAL_SPI_CHECK_CLOCK_FREQ

PA1  LED0 OUTPUT LOW    GPIO(0)
PC4  LED1 OUTPUT LOW    GPIO(1)
PC13 LED2 OUTPUT LOW    GPIO(2)

PE3  EXTERN_GPIO1 INPUT GPIO(3)
PC5  EXTERN_GPIO2 INPUT GPIO(4)

# analog in
PA4 BATT_VOLTAGE_SENS ADC1 SCALE(5.667)
PA5 VDD_5V_SENS       ADC1 SCALE(1.667)

# SPI devices

# IMU
SPIDEV icm20948       SPI1 DEVID1  IMU_0_CS       MODE3  4*MHZ  8*MHZ

# IMU
IMU Invensensev2 SPI:icm20948 ROTATION_PITCH_180

PD4 IMU_0_INT  INPUT PULLUP
PD6 IMU_0_CS CS

# COMPASS
COMPASS AK09916:probe_ICM20948 0 ROTATION_ROLL_180_YAW_90

CHECK_ICM20948      spi_check_register("icm20948", INV2REG_WHOAMI, INV2_WHOAMI_ICM20948)

# I2C devices

# BARO
BARO DPS310 I2C:0:0x77
PB9 BARO_0_INT INPUT PULLUP


#define ALLOW_ARM_NO_COMPASS
#define HAL_BARO_ALLOW_INIT_NO_BARO 1

# define HAL_DISABLE_DCACHE
